= form_for @post do |f|
  =hidden_field_tag :user_id, @post.user_id
  =error_messages_for(@post)
  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :body
    = f.text_area :body, class: 'form-control'
  .actions
    = f.submit nil, class: 'btn btn-primary'
