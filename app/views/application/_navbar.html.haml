%nav.navbar.navbar-fixed-top.navbar-inverse
  .container
    .navbar-header
      =link_to 'Блоги', root_path, class: 'navbar-brand'
    #navbar.collapse.navbar-collapse
      %ul.nav.navbar-nav
        -if @current_user
          %li=link_to 'Мой блог', @current_user
        %li=link_to 'Пользователи', users_path
      %ul.nav.navbar-nav.navbar-right
        -if @current_user
          %li
            %p.navbar-text=@current_user.name
          %li=link_to 'Выход', logout_path
        -else
          %li=link_to 'Вход', login_path
          %li=link_to 'Регистрация', new_user_path
